{% block body %}

    <h1>Nouveau Formulaire</h1>

    {{ form_start(formUser) }}

    {{ form_widget(formUser) }}

    <button type="submit" class="btn btn-success">
        {% if editMode %}
            Enregistrer
        {% else %}
            Ajouter
        {% endif %}
    </button>

    {{ form_end(formUser) }}

{% endblock %}
